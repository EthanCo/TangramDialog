<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangramdialog.sample.MainActivity">

    <Button
        android:id="@+id/btn_dialog_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通对话框" />

    <Button
        android:id="@+id/btn_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="顶部对话框" />

    <Button
        android:id="@+id/btn_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底部对话框" />

    <Button
        android:id="@+id/btn_dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入对话框" />

    <Button
        android:id="@+id/btn_dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义对话框" />

    <Button
        android:id="@+id/btn_dialog_custom_unify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义对话框_统一Click事件" />

    <Button
        android:id="@+id/btn_dialog_custom_styles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义样式对话框" />

    <Button
        android:id="@+id/btn_dialog_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="顶部对话框_Margin" />

</LinearLayout>